<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KinoPoisk2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:kinoPoisk2="clr-namespace:KinoPoisk2"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KinoPoisk2.Views.MainWindow"
        Icon="/Assets/logo.ico"
        Title="{Binding NameProgram}"
        Height="550"
        Width="1200"
        MinHeight="550"
        MinWidth="1200"
        ExtendClientAreaToDecorationsHint="True"
        >
        
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
        
    </Design.DataContext>
    
    
    
    
    <Grid Background="{Binding BackgroundProgram}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="0,25,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label FontWeight="Bold" FontStyle="15" Foreground="{Binding ForegroundLetters}" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="10" FontSize="18" Content="{Binding NameProgram}"></Label>
                <TextBox Watermark="Название фильма" Width="300" HorizontalAlignment="Right" x:Name="SearchRequest" FontWeight="Bold" FontStyle="25"  Grid.Row="0" Grid.Column="1" Margin="5" Background="{Binding BackgroundProgram}" Foreground="{Binding ForegroundLetters}"></TextBox>
                <Button HorizontalAlignment="Right" Click="SearchBtn" FontWeight="Bold" FontStyle="25" Margin="15,0,0,0" Grid.Row="0" Grid.Column="2" Content="Поиск" Foreground="{Binding ForegroundLetters}"></Button>
                <Button Grid.Column="5" Grid.Row="0" x:Name="Profile" Click="ConfigSettings" Margin="20,0,0,0" Content="Информация" FontWeight="Bold" FontStyle="25"></Button>
                <Button HorizontalAlignment="Right" Click="Notes" FontWeight="Bold" FontStyle="25" Margin="15,0,0,0" Grid.Row="0" Grid.Column="6" Content="Заметки" Foreground="{Binding ForegroundLetters}"></Button>
                <Button Click="OpenMenuOne" Grid.Column="7" Content="Меню" Margin="15,0,0,0"></Button>
                <Menu Grid.Column="7" IsEnabled="False" Margin="15,0,0,0">
                    <MenuItem x:Name="MenuItem_One">
                        <Button Click="Favorites" Content="Избранное" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Button>
                        <Button Click="SearchCritick" Content="Критики" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Button>
                        <Button Click="Picks" Content="Выбор критиков" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Button>
                        <Button Click="AlreadyWatched" Content="Уже просмотренно" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Button>
                        <Button Click="AddOverview" Content="Добавить свой обзор" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Button>
                        <Button Click="ClearFavorites" Content="Очистить избранные" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Button>
                    </MenuItem>
                </Menu>
            </Grid>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
         
            <StackPanel> 
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Margin="10,0,0,0" Content="Сортировка по дате: От  " VerticalAlignment="Center" Grid.Column="0" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="{Binding ForegroundLetters}"></Label>
                    <TextBox Watermark="2021-12-31" Width="150" Grid.Column="1" x:Name="DateOut_OT"></TextBox>
                    <Label Content="До" VerticalAlignment="Center" Grid.Column="2" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="{Binding ForegroundLetters}"></Label>
                    <TextBox Watermark="2022-12-31" Width="150" Grid.Column="3" x:Name="DateOut_DO"></TextBox>
                    <Button HorizontalAlignment="Right" Click="SortDate" FontWeight="Bold" FontStyle="25" Grid.Column="4" Margin="10,0,0,0" Content="Сортировать" Foreground="{Binding ForegroundLetters}"></Button>
                    <Label Grid.Column="5" x:Name="Time" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,0,0"></Label>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="2" IsVisible="True">
            <StackPanel>
                <ScrollViewer>
                    <StackPanel IsVisible="True" x:Name="MainDataGrid">
                        <DataGrid Name="MyDataGrid" x:Name="DataGridFilms" IsVisible="True" IsReadOnly="True" Foreground="{Binding ForegroundLetters}" AutoGenerateColumns="False" FontWeight="Bold" FontFamily="Franklin Gothic Medium" FontSize="14">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название фильма"  Binding="{Binding Path=TitleFilm}"/>
                                <DataGridTextColumn Header="Рейтинг фильма" Binding="{Binding Path=RatingFilm}" />
                                <DataGridTextColumn Header="Дата выхода" Binding="{Binding Path=DateOut}" />
                                <DataGridTextColumn Header="Дата пуликации обзора" Binding="{Binding Path=DatePublic}" />
                            </DataGrid.Columns>
                            
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Автор этой записи в NewYork Times: " />
                                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Author}" />
                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Описание фильма"/>
                                            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Path=DiscriptionFilm}" TextWrapping="Wrap" Width="500"/>
                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Ссылка на статью"/>
                                            <TextBox Grid.Column="1" Grid.Row="3" IsReadOnly="True" Width="400" Text="{Binding Path=link.url}" TextWrapping="Wrap"/>
                                            
                                            <Button x:Name="AddFavorite" Click="Button_OnClick" Grid.Column="3" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="В избранное" Margin="10,0,0,0"></Button>
                                            <Button x:Name="DeleteFavorite" Click="DeleteFromfavorite" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Удалить с Избранного" Margin="10,0,0,0"></Button>
                                            <Button x:Name="" Click="AlreadyWatchedAdd" Grid.Column="4" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Просмотрен" Margin="10,0,0,0"></Button>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                    </StackPanel>
                </ScrollViewer>
                
                <Border IsVisible="False" x:Name="ConfigureSettings" Width="600" CornerRadius="20" Background="#3C3B3B">
                    <StackPanel >
                        <Label HorizontalAlignment="Center" Margin="10,0,0,0" Content="Справочная информация." FontWeight="Bold" FontSize="20" FontFamily="Comic Sans MS"></Label>
                        <Menu HorizontalAlignment="Center">
                            <Button Click="AboutProgrammer" Content="О разроботчеке"></Button>
                            <Button Click="AboutProgramm" Content="О приложении"></Button>
                        </Menu>
                        <TextBlock x:Name="AboutText" HorizontalAlignment="Center" Margin="10,10,10,10" FontWeight="Bold" FontFamily="Comic Sans MS"></TextBlock>
                        <Image x:Name="ImageTeh" Source="/Assets/imageTeh.jpg" Height="256" Width="256"></Image>
                    </StackPanel>
                </Border>
                
                <StackPanel IsVisible="False" x:Name="NotesPlase">
                    <Label HorizontalAlignment="Center" Margin="10,0,0,0" Content="Заметки." FontWeight="Bold" FontSize="20" FontFamily="Comic Sans MS"></Label>
                    <Menu HorizontalAlignment="Center">
                        <!-- <Button Click="OpenNote" Content="Открыть"></Button> -->
                        <Button Click="SaveNote" Content="Сохранить"></Button>
                    </Menu>
                    <TextBox Width="900" Height="250" x:Name="NotesText" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10,10,10,10" FontWeight="Bold" FontFamily="Comic Sans MS"></TextBox>
                </StackPanel>
                
                <StackPanel IsVisible="False" x:Name="Criticks">
                    <Border CornerRadius="20" Background="#3C3B3B">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,10" Content="Информация о критиках." FontWeight="Bold" FontSize="20" FontFamily="Comic Sans MS"></Label>
                            <TextBox Grid.Column="1" Width="400" HorizontalAlignment="Right" FontWeight="Bold" FontFamily="Comic Sans MS" Margin="0,5,5,5" x:Name="PlaceWithName"></TextBox>
                            <Button Grid.Column="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="Найти" Margin="0,5,15,5" Click="SearchCriticInList"></Button>
                        </Grid>
                    </Border>
                    <DataGrid x:Name="ListCritics" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Критик"  Binding="{Binding Path=display_name}"/>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding Path=bio}"></TextBlock>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </StackPanel>
                
                <StackPanel IsVisible="False" x:Name="AddRewiew" Width="600" >
                    <Border CornerRadius="20" Background="#3C3B3B">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Content="Дабовление своего обзора." Margin="0, 15, 0,0" FontWeight="Bold" FontStyle="15" HorizontalAlignment="Center"></Label>
                            
                            <Label Grid.Column="0" Grid.Row="1" Content="Название фильма" Margin="15, 15, 0,0"></Label>
                            <TextBox Grid.Column="1" Grid.Row="1" Margin="0, 15, 0,0"></TextBox>
                            
                            <Label Grid.Column="0" Grid.Row="2" Content="Полное название фильма" Margin="15, 15, 0,0"></Label>
                            <TextBox Grid.Column="1" Grid.Row="2" Margin="0, 15, 0,0"></TextBox>
                            
                            <Label Grid.Column="0" Grid.Row="3" Content="Рейтинг фильма" Margin="15, 15, 0,0"></Label>
                            <TextBox Grid.Column="1" Grid.Row="3" Margin="0, 15, 0,0"></TextBox>
                            
                            <Label Grid.Column="0" Grid.Row="4" Content="Описание фильма" Margin="15, 15, 0,0"></Label>
                            <TextBox Grid.Column="1" Grid.Row="4" Margin="0, 15, 0,0"></TextBox>
                            
                            <Label Grid.Column="0" Grid.Row="5" Content="Дата выхода фильма '2021-12-31'" Margin="15, 15, 0,0"></Label>
                            <TextBox Grid.Column="1" Grid.Row="5" Margin="0, 15, 0,0"></TextBox>
                            
                            <Label Grid.Column="0" Grid.Row="6" Content="Ссылка на источник" Margin="15, 15, 0,0"></Label>
                            <TextBox Grid.Column="1" Grid.Row="6" Margin="0, 15, 0,0"></TextBox>
                            
                            <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Content="Добавить" HorizontalAlignment="Center" Margin="0, 15, 0,15"></Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
